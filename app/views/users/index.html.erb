<h1>Alpha Bloggers</h1>

<%= will_paginate @users, :container => false %>

<% @users.each do |user| %>
    <h2>
        <%= link_to gravatar_for(user, size: 100), user_path(user) %>
        <%= link_to user.username, user_path(user) %>
    </h2>

    <p>
        <small>
            Joined <%= time_ago_in_words(user.created_at) %>
        </small>
    </p>
    
    <%= link_to 'View profile', user_path(user) %>
    <% if logged_in? %>
        <% if user == current_user %>
            | <%= link_to 'Edit profile', edit_user_path(user) %>
        <% end %>
        <% if current_user.admin? %>
            | <%= link_to 'Delete user', user_path(user), data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete the user account and all associated articles?' } %>
        <% end %>
    <% end %>
<% end %>

<br /><br />

<%= will_paginate @users, :container => false %>
