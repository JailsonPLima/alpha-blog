<%= link_to 'Home page', root_path %> |
<%= link_to 'About page', about_path %> |
<%= link_to 'Bloggers', users_path %> |
<%= link_to 'Articles listing', articles_path %> |
<% if logged_in? %>
    <%= link_to 'Create new article', new_article_path %> |
    <%= "(Admin)" if current_user.admin? %>
    <%= link_to current_user.username, user_path(current_user) %> |
    <%= link_to 'Log out', logout_path, data: { turbo_method: :delete } %> |
    <%= link_to 'Delete account', user_path(current_user), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
<% else %>
    <%= link_to 'Log in', login_path %> |
    <%= link_to 'Sign up', signup_path %> 
<% end %>

