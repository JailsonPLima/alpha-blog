<% @articles.each do |article| %>
    <p><strong>Title:</strong> <%= article.title %></p>
    <p><strong>Description:</strong> <%= truncate(article.description, length: 100) %> </p>

    <p>
        <small>
            Created
            <% if article.user %>
                by <%= link_to article.user.username, user_path(article.user) %>
            <% end %>
            <br />
            Created <%= time_ago_in_words(article.created_at).capitalize %> ago, edited <%= time_ago_in_words(article.updated_at).capitalize %> ago
        </small>
    </p>

    <%= link_to 'Show', article_path(article) %>
    <% if logged_in? && (article.user == current_user || current_user.admin?) %>
        | <%= link_to 'Edit', edit_article_path(article) %> |
        <%= link_to 'Delete', article, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
    <% end %>
<% end %>